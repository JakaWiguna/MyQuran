<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyQuran" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <item name="titleTextColor">@color/white</item>
        <item name="android:windowBackground">@color/night_darker_purple</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_darker_purple</item>
        <item name="colorPrimaryVariant">@color/night_darker_purple</item>
        <item name="colorOnPrimary">@color/night_gray</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_light_purple</item>
        <item name="colorSecondaryVariant">@color/night_purple</item>
        <item name="colorOnSecondary">@color/night_black</item>

        <item name="colorAccent">@color/night_blue</item>
        <item name="dividerColor">@color/day_gray</item>
        <item name="colorControlNormal">@color/night_light_purple</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="TextColorPrimary">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColorSecondary">
        <item name="android:textColor">@color/night_light_purple</item>
    </style>

    <style name="TextColorTertiary">
        <item name="android:textColor">@color/night_gray</item>
    </style>
</resources>