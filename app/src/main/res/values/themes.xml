<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyQuran" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <item name="titleTextColor">@color/day_purple</item>
        <item name="android:windowBackground">@color/day_white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_white</item>
        <item name="colorPrimaryVariant">@color/day_white</item>
        <item name="colorOnPrimary">@color/day_darker_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/day_dark_purple</item>
        <item name="colorSecondaryVariant">@color/day_light_purple</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/day_soft_purple</item>

        <item name="dividerColor">@color/day_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/day_light_purple</item>
    </style>

    <style name="TextColorPrimary">
        <item name="android:textColor">@color/day_darker_purple</item>
    </style>

    <style name="TextColorSecondary">
        <item name="android:textColor">@color/day_light_purple</item>
    </style>

    <style name="TextColorTertiary">
        <item name="android:textColor">@color/day_dark_gray</item>
    </style>
</resources>